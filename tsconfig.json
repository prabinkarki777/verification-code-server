{
  "compilerOptions": {
    "target": "ES2021",
    "module": "ESNext",
    "moduleResolution": "node",
    "strict": true,
    "types": ["node", "express", "jest", "supertest"],
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "rootDir": "./",
    "outDir": "./dist",
    "baseUrl": "./src",
    "sourceMap": true,
    "resolveJsonModule": true,
    "paths": {
      "@": ["*"],
      "@config": ["config"],
      "@config/*": ["config/*"],
      "@app": ["app"],
      "@server": ["server"],
      "@controllers": ["controllers"],
      "@controllers/*": ["controllers/*"],
      "@middleware": ["middleware"],
      "@middleware/*": ["middleware/*"],
      "@routes": ["routes"],
      "@routes/*": ["routes/*"],
      "@services": ["services"],
      "@services/*": ["services/*"],
      "@utils": ["utils"],
      "@utils/*": ["utils/*"]
    }
  },
  "include": ["src/**/*.ts", "src/types/**/*.d.ts", "__test__/**/*"],
  "exclude": ["node_modules"]
}
